entity Utilisateur {
	nom String,
    prenom String,
    courriel String,
    adresse String,
    type Type,
}

enum Type {
    Admin, Acheteur
}

entity Produit {
    nom String,
    prix Float,
    lienImage String,
    marque String,
    modele String,
    progressif Boolean,
}

entity Caracteristique {
    couleur String,
    quantite Integer,
}

entity Transaction {
    etat EtatProduit,
    date LocalDate,
}

enum EtatProduit {
	Encours, Achete
}

entity LigneTransaction {
    quantite Integer,
    prixUnitaire Float
}

entity Image {
    lienImage String,
}

relationship OneToMany {
	Utilisateur to Transaction

	Transaction to LigneTransaction
    
    Produit to Caracteristique,

	Caracteristique{caracteristiqueID} to Image{produitID}

	Produit to Image
}

relationship OneToOne {
	Caracteristique to LigneTransaction
}
